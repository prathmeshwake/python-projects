# Interactive Calculator Program

def add(a, b):
    return a + b

def sub(a, b):
    return a - b

def mul(a, b):
    return a * b

def div(a, b):
    if b == 0:
        return "âŒ Cannot divide by zero"
    return a / b

def avg(a, b):
    return (a + b) / 2


def get_number(msg):
    while True:
        try:
            return float(input(msg))
        except ValueError:
            print("âš ï¸ Please enter a valid number!")


